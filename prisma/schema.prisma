datasource db {
  provider = "sqlite"
  url      = "file:./db/astus.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @id @default(autoincrement()) //PK
  email String @unique
  password String
  name String
  posts Post[]
}

model Post {
  id Int @id @default(autoincrement()) //PK
  authorId Int                        //FK
  author User @relation(fields: [authorId], references: [id])  // [FK],[User's PK]
}

